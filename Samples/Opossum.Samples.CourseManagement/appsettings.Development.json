{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",

      // Development: "Debug" shows per-projection rebuild progress and every
      // polling tick that processes events â€” useful when building new projections
      // or diagnosing lag. Switch to "Information" to simulate production noise levels.
      "Opossum": "Debug"
    }
  },
  "AllowedHosts": "*",

  "Opossum": {
    "RootPath": "D:\\Database",
    "Contexts": [
      "OpossumSampleApp"//,
      //"SmallDb"
    ],
    "FlushEventsImmediately": true
  },

  "Projections": {
    "EnableAutoRebuild": true,
    "MaxConcurrentRebuilds": 4,
    "PollingInterval": "00:00:01",
    "BatchSize": 50
  }
}