{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Opossum": "Information"
    }
  },
  "AllowedHosts": "*",

  "Opossum": {
    "RootPath": "D:\\Database",
    "Contexts": [
      "OpossumSampleApp"
    ],
    "FlushEventsImmediately": true
  },

  "Projections": {
    "EnableAutoRebuild": true,
    "MaxConcurrentRebuilds": 4,
    "PollingInterval": "00:00:01",
    "BatchSize": 50
  }
}
