{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",

      // -----------------------------------------------------------------------
      // Opossum log-level guidance
      //
      // "Information" (recommended for production):
      //   Logs daemon lifecycle (start/stop), rebuild summaries, and errors.
      //   Polling-cycle details and per-projection rebuild progress are suppressed.
      //   Typically ~5 entries per app start, then silence until shutdown.
      //
      // "Debug" (recommended for development — see appsettings.Development.json):
      //   Also logs each polling tick that processes events, per-projection rebuild
      //   progress, and skipped-update notifications. Useful when diagnosing
      //   projection lag or ordering issues.
      //
      // "Warning" (minimal — errors + rebuild failures only):
      //   Silences all lifecycle and rebuild messages. Use when log storage is
      //   severely constrained and you only need alerting on failures.
      //
      // Fine-grained per-component overrides (takes precedence over "Opossum"):
      //   "Opossum.Projections.ProjectionDaemon": "Warning"   <- silence daemon lifecycle
      //   "Opossum.Projections.ProjectionManager": "Warning"  <- silence rebuild summaries
      //   "Opossum.Storage.FileSystem.FileSystemEventStore": "Debug"  <- trace every append/read
      //   "Opossum.Mediator.Mediator": "Debug"  <- trace every command dispatch
      // -----------------------------------------------------------------------
      "Opossum": "Information"
    }
  },
  "AllowedHosts": "*",

  "Opossum": {
    "RootPath": "",
    "StoreName": "",
    "FlushEventsImmediately": true
  },

  "Projections": {
    "EnableAutoRebuild": true,
    "MaxConcurrentRebuilds": 4,
    "PollingInterval": "00:00:01",
    "BatchSize": 50
  }
}
